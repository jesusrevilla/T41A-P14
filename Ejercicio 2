CREATE OR REPLACE PROCEDURE aumentar_precios(IN p_porcentaje NUMERIC)
LANGUAGE plpgsql
AS $$
BEGIN
    IF p_porcentaje <= 0 THEN
        RAISE NOTICE 'El porcentaje debe ser mayor que 0.';
        RETURN;
    END IF;

    UPDATE productos
    SET precio = precio + (precio * p_porcentaje / 100);

    RAISE NOTICE 'Se han aumentado los precios en un %.', p_porcentaje;
END;
$$;

